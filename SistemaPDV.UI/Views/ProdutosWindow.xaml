<Window x:Class="SistemaPDV.UI.Views.ProdutosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciar Produtos" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecalho -->
        <Border Grid.Row="0" Background="#2196F3">
            <Grid Margin="20,0">
                <TextBlock Text=" Gerenciar Produtos" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <Button Content="Fechar" 
                       Width="100" 
                       Height="35"
                       Background="#F44336"
                       Foreground="White"
                       BorderThickness="0"
                       HorizontalAlignment="Right"
                       Click="BtnFechar_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Conteúdo Principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Formulário de Cadastro -->
            <Border Grid.Column="0" 
                   Background="White" 
                   Padding="20"
                   Margin="0,0,10,0"
                   CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Cadastro de Produto" 
                              FontSize="18" 
                              FontWeight="Bold"
                              Margin="0,0,0,20"/>

                    <!-- ID (Oculto quando novo) -->
                    <TextBox x:Name="txtId" Visibility="Collapsed"/>

                    <!-- Nome -->
                    <TextBlock Text="Nome do Produto *" FontSize="12" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtNome" 
                            Height="35" 
                            Margin="0,5,0,15"
                            Padding="10,8"
                            FontSize="14"/>

                    <!-- Código de Barras -->
                    <TextBlock Text="Código de Barras" FontSize="12" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtCodigoBarras" 
                            Height="35" 
                            Margin="0,5,0,15"
                            Padding="10,8"
                            FontSize="14"/>

                    <!-- Preço -->
                    <TextBlock Text="Preço (R$) *" FontSize="12" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPreco" 
                            Height="35" 
                            Margin="0,5,0,15"
                            Padding="10,8"
                            FontSize="14"
                            PreviewTextInput="TxtNumerico_PreviewTextInput"/>

                    <!-- Estoque Atual -->
                    <TextBlock Text="Estoque Atual *" FontSize="12" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEstoqueAtual" 
                            Height="35" 
                            Margin="0,5,0,15"
                            Padding="10,8"
                            FontSize="14"
                            PreviewTextInput="TxtNumerico_PreviewTextInput"/>

                    <!-- Estoque Mínimo -->
                    <TextBlock Text="Estoque Mínimo" FontSize="12" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEstoqueMinimo" 
                            Height="35" 
                            Margin="0,5,0,15"
                            Padding="10,8"
                            FontSize="14"
                            Text="0"
                            PreviewTextInput="TxtNumerico_PreviewTextInput"/>

                    <!-- Ativo -->
                    <CheckBox x:Name="chkAtivo" 
                             Content="Produto Ativo" 
                             IsChecked="True"
                             FontSize="12"
                             Margin="0,5,0,20"/>

                    <!-- Botões -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnSalvar"
                               Content=" Salvar" 
                               Width="120" 
                               Height="40"
                               Background="#4CAF50"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Margin="0,0,10,0"
                               Click="BtnSalvar_Click"
                               Cursor="Hand"/>

                        <Button Content=" Limpar" 
                               Width="120" 
                               Height="40"
                               Background="#9E9E9E"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Click="BtnLimpar_Click"
                               Cursor="Hand"/>
                    </StackPanel>

                    <TextBlock Text="* Campos obrigatórios" 
                              FontSize="10" 
                              Foreground="Gray"
                              HorizontalAlignment="Center"
                              Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Lista de Produtos -->
            <Border Grid.Column="1" 
                   Background="White" 
                   Padding="20"
                   Margin="10,0,0,0"
                   CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <TextBlock Grid.Row="0"
                              Text="Produtos Cadastrados" 
                              FontSize="18" 
                              FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <!-- Barra de Pesquisa -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtPesquisa" 
                                Grid.Column="0"
                                Height="35" 
                                Padding="10,8"
                                FontSize="14"
                                TextChanged="TxtPesquisa_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text=" Pesquisar produto..." 
                                                                     Foreground="Gray"
                                                                     Padding="10,8"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button Grid.Column="1"
                               Content=" Atualizar"
                               Width="120"
                               Height="35"
                               Background="#2196F3"
                               Foreground="White"
                               BorderThickness="0"
                               Margin="10,0,0,0"
                               Click="BtnAtualizar_Click"
                               Cursor="Hand"/>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="2"
                             x:Name="dgProdutos"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             RowHeight="35"
                             FontSize="13"
                             AlternatingRowBackground="#F9F9F9"
                             SelectionChanged="DgProdutos_SelectionChanged">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                              Binding="{Binding Id}" 
                                              Width="50"/>

                            <DataGridTextColumn Header="Nome" 
                                              Binding="{Binding Nome}" 
                                              Width="2*"/>

                            <DataGridTextColumn Header="Cód. Barras" 
                                              Binding="{Binding CodigoBarras}" 
                                              Width="*"/>

                            <DataGridTextColumn Header="Preço" 
                                              Binding="{Binding Preco, StringFormat=C2}" 
                                              Width="*"/>

                            <DataGridTextColumn Header="Estoque" 
                                              Binding="{Binding EstoqueAtual}" 
                                              Width="80"/>

                            <DataGridCheckBoxColumn Header="Ativo" 
                                                  Binding="{Binding Ativo}" 
                                                  Width="60"/>

                            <!-- Coluna de Ações -->
                            <DataGridTemplateColumn Header="Ações" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="" 
                                                   Width="40" 
                                                   Height="25"
                                                   Background="#FF9800"
                                                   Foreground="White"
                                                   BorderThickness="0"
                                                   Margin="0,0,5,0"
                                                   Click="BtnEditar_Click"
                                                   Cursor="Hand"
                                                   ToolTip="Editar"/>

                                            <Button Content="" 
                                                   Width="40" 
                                                   Height="25"
                                                   Background="#F44336"
                                                   Foreground="White"
                                                   BorderThickness="0"
                                                   Click="BtnExcluir_Click"
                                                   Cursor="Hand"
                                                   ToolTip="Excluir"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Ativo}" Value="False">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Setter Property="FontStyle" Value="Italic"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <!-- Estilos -->
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="3"
                               Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>