<Window x:Class="SistemaPDV.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema PDV - Menu Principal" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Barra Superior -->
        <Border Grid.Row="0" Background="#2196F3">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text=" Sistema PDV" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center">
                    <TextBlock x:Name="txtUsuarioLogado" 
                              Text="Usuário: Admin" 
                              FontSize="14" 
                              Foreground="White" 
                              Margin="0,0,20,0"/>
                    
                    <Button Content="Sair" 
                           Width="80" 
                           Height="35"
                           Background="#F44336"
                           Foreground="White"                     
                           BorderThickness="0"
                           Click="BtnSair_Click"
                           Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Menu de Botões -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Botão PDV -->
            <Button Grid.Column="0" Grid.Row="0" 
                   Margin="10" 
                   Background="#4CAF50"
                   Click="BtnPDV_Click">
                <StackPanel>
                    <TextBlock Text="💰" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="PDV / Vendas" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Button>

            <!-- Botão Produtos -->
            <Button Grid.Column="1" Grid.Row="0" 
                   Margin="10" 
                   Background="#2196F3"
                   Click="BtnProdutos_Click">
                <StackPanel>
                    <TextBlock Text="📦" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Produtos" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Button>

            <!-- Botão Clientes -->
            <Button Grid.Column="2" Grid.Row="0" 
                   Margin="10" 
                   Background="#FF9800"
                   Click="BtnClientes_Click">
                <StackPanel>
                    <TextBlock Text="👥" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Clientes" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Button>

            <!-- Botão Relatórios -->
            <Button Grid.Column="0" Grid.Row="1" 
                   Margin="10" 
                   Background="#9C27B0"
                   Click="BtnRelatorios_Click">
                <StackPanel>
                    <TextBlock Text="📊" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Relatórios" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Button>

            <!-- Botão Usuários -->
            <Button Grid.Column="1" Grid.Row="1" 
                   Margin="10" 
                   Background="#607D8B"
                   Click="BtnUsuarios_Click">
                <StackPanel>
                    <TextBlock Text="🔐" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Usuários" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Button>

            <!-- Botão Configurações -->
            <Button Grid.Column="2" Grid.Row="1" 
                   Margin="10" 
                   Background="#795548"
                   Click="BtnConfiguracoes_Click">
                <StackPanel>
                    <TextBlock Text="⚙️" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="Configurações" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Rodapé -->
        <Border Grid.Row="2" Background="#424242">
            <TextBlock Text="Sistema PDV v1.0 - Desenvolvido Por Celso Antunes Nogueira" 
                      Foreground="White" 
                      FontSize="11"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </Border>
    </Grid>

    <!-- Estilo dos Botões -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="8"
                               Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" 
                                                Opacity="0.3" 
                                                ShadowDepth="3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
