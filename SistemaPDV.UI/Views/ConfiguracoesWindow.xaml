<Window x:Class="SistemaPDV.UI.Views.ConfiguracoesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuracoes do Sistema" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecalho -->
        <Border Grid.Row="0" Background="#795548">
            <Grid Margin="20,0">
                <TextBlock Text="Configuracoes do Sistema" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <Button Content="Fechar" 
                       Width="100" 
                       Height="35"
                       Background="#F44336"
                       Foreground="White"
                       BorderThickness="0"
                       HorizontalAlignment="Right"
                       Click="BtnFechar_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Conteudo -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <StackPanel MaxWidth="800">

                <!-- Informacoes do Sistema -->
                <Border Background="White" 
                       Padding="20"
                       Margin="0,0,0,20"
                       CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Informacoes do Sistema" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                      Text="Nome do Sistema:" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                      Text="Sistema PDV"
                                      Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                      Text="Versao:" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                      Text="1.0.0"
                                      Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                      Text="Banco de Dados:" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                      x:Name="txtCaminhoBanco"
                                      Text="sistemaPDV.db"
                                      Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                      Text="Total de Produtos:" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                      x:Name="txtTotalProdutos"
                                      Text="0"
                                      Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                      Text="Total de Clientes:" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" 
                                      x:Name="txtTotalClientes"
                                      Text="0"
                                      Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Backup e Restauracao -->
                <Border Background="White" 
                       Padding="20"
                       Margin="0,0,0,20"
                       CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Backup e Restauracao" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,20"/>

                        <TextBlock Text="Crie backups regulares do banco de dados para proteger suas informacoes."
                                  TextWrapping="Wrap"
                                  Foreground="Gray"
                                  Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Fazer Backup"
                                   Width="150"
                                   Height="40"
                                   Background="#4CAF50"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   BorderThickness="0"
                                   Margin="0,0,10,0"
                                   Click="BtnBackup_Click"
                                   Cursor="Hand"/>

                            <Button Content="Restaurar Backup"
                                   Width="150"
                                   Height="40"
                                   Background="#FF9800"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   BorderThickness="0"
                                   Click="BtnRestaurar_Click"
                                   Cursor="Hand"/>
                        </StackPanel>

                        <TextBlock x:Name="txtUltimoBackup"
                                  Text="Ultimo backup: Nunca"
                                  FontSize="11"
                                  Foreground="Gray"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Manutencao -->
                <Border Background="White" 
                       Padding="20"
                       Margin="0,0,0,20"
                       CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Manutencao do Banco de Dados" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,20"/>

                        <TextBlock Text="Limpe vendas antigas e otimize o banco de dados."
                                  TextWrapping="Wrap"
                                  Foreground="Gray"
                                  Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Limpar Vendas Antigas"
                                   Width="180"
                                   Height="40"
                                   Background="#2196F3"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   BorderThickness="0"
                                   Margin="0,0,10,0"
                                   Click="BtnLimparVendas_Click"
                                   Cursor="Hand"/>

                            <Button Content="Otimizar Banco"
                                   Width="150"
                                   Height="40"
                                   Background="#9C27B0"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   BorderThickness="0"
                                   Click="BtnOtimizar_Click"
                                   Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Configuracoes Gerais -->
                <Border Background="White" 
                       Padding="20"
                       Margin="0,0,0,20"
                       CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Configuracoes Gerais" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,20"/>

                        <CheckBox x:Name="chkImprimirAutomatico"
                                 Content="Imprimir cupom automaticamente apos venda"
                                 FontSize="14"
                                 Margin="0,0,0,15"
                                 IsChecked="False"/>

                        <CheckBox x:Name="chkAlertaEstoque"
                                 Content="Alertar quando estoque estiver baixo"
                                 FontSize="14"
                                 Margin="0,0,0,15"
                                 IsChecked="True"/>

                        <CheckBox x:Name="chkPermitirVendaNegativa"
                                 Content="Permitir venda com estoque negativo"
                                 FontSize="14"
                                 Margin="0,0,0,20"
                                 IsChecked="False"/>

                        <Button Content="Salvar Configuracoes"
                               Width="200"
                               Height="40"
                               Background="#4CAF50"
                               Foreground="White"
                               FontWeight="Bold"
                               BorderThickness="0"
                               HorizontalAlignment="Left"
                               Click="BtnSalvarConfig_Click"
                               Cursor="Hand"/>
                    </StackPanel>
                </Border>

                <!-- Zona de Perigo -->
                <Border Background="#FFEBEE" 
                       BorderBrush="#F44336"
                       BorderThickness="2"
                       Padding="20"
                       CornerRadius="5">

                    <StackPanel>
                        <TextBlock Text="Zona de Perigo" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Foreground="#D32F2F"
                                  Margin="0,0,0,20"/>

                        <TextBlock Text="ATENCAO: As acoes abaixo sao irreversiveis!"
                                  TextWrapping="Wrap"
                                  Foreground="#D32F2F"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,15"/>

                        <Button Content="Limpar TODOS os Dados"
                               Width="200"
                               Height="40"
                               Background="#F44336"
                               Foreground="White"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Click="BtnLimparTudo_Click"
                               Cursor="Hand"/>

                        <TextBlock Text="Isso excluira todas as vendas, produtos e clientes!"
                                  FontSize="11"
                                  Foreground="#D32F2F"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>

    <!-- Estilos -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="5"
                               Padding="15,5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>