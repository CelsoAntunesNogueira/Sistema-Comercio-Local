<Window x:Class="SistemaPDV.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema PDV - Login" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecalho -->
        <Border Grid.Row="0" Background="#2196F3">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Sistema PDV" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Faca login para continuar" 
                          FontSize="14" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formulario de Login -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="50,30,50,30" 
                Padding="30"
                CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Opacity="0.3" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel>
                <!-- Campo Login -->
                <TextBlock Text="Login" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="txtLogin" 
                        Height="35" 
                        FontSize="14"
                        Padding="10,8"
                        BorderBrush="#BDBDBD"
                        BorderThickness="1"
                        KeyDown="TxtLogin_KeyDown"/>

                <!-- Campo Senha -->
                <TextBlock Text="Senha" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtSenha" 
                            Height="35" 
                            FontSize="14"
                            Padding="10,8"
                            BorderBrush="#BDBDBD"
                            BorderThickness="1"
                            KeyDown="TxtSenha_KeyDown"/>

                <!-- BOTAO ENTRAR -->
                <Button x:Name="btnLogin" 
                       Content="ENTRAR" 
                       Height="45" 
                       FontSize="16"
                       FontWeight="Bold"
                       Background="#4CAF50" 
                       Foreground="White"
                       BorderThickness="0"
                       Margin="0,25,0,0"
                       Cursor="Hand"
                       Click="BtnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Texto informativo -->
                <TextBlock Text="Usuario padrao: admin / Senha: admin123" 
                          FontSize="11" 
                          Foreground="Gray" 
                          HorizontalAlignment="Center"
                          Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>