<Window x:Class="SistemaPDV.UI.Views.VendasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDV - Ponto de Venda" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Border Grid.Row="0" Background="#4CAF50">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="💰 PDV - Ponto de Venda" 
                              FontSize="22" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock x:Name="txtOperador" 
                              Text="Operador: Admin" 
                              FontSize="14" 
                              Foreground="White"
                              Margin="30,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="✕ Fechar" 
                       Width="100" 
                       Height="35"
                       Background="#F44336"
                       Foreground="White"
                       BorderThickness="0"
                       HorizontalAlignment="Right"
                       Click="BtnFechar_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Conteúdo Principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Área de Itens da Venda -->
            <Border Grid.Column="0" 
                   Background="White" 
                   Padding="20"
                   Margin="0,0,10,0"
                   CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Busca de Produto -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtBuscaProduto" 
                                Grid.Column="0"
                                Height="45" 
                                Padding="15,12"
                                FontSize="16"
                                KeyDown="TxtBuscaProduto_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="🔍 Digite o código ou nome do produto (F2 para buscar)" 
                                                                     Foreground="Gray"
                                                                     Padding="15,12"
                                                                     FontSize="16"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <TextBox x:Name="txtQuantidade" 
                                Grid.Column="1"
                                Height="45" 
                                Padding="15,12"
                                FontSize="16"
                                Text="1"
                                Margin="10,0,0,0"
                                PreviewTextInput="TxtNumerico_PreviewTextInput">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button Grid.Column="2"
                               Content="+ Adicionar"
                               Height="45"
                               Background="#4CAF50"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Margin="10,0,0,0"
                               Click="BtnAdicionar_Click"
                               Cursor="Hand"/>
                    </Grid>

                    <!-- Info de Atalhos -->
                    <Border Grid.Row="1" 
                           Background="#E8F5E9" 
                           Padding="10"
                           Margin="0,0,0,15"
                           CornerRadius="3">
                        <TextBlock FontSize="12" Foreground="#2E7D32">
                            <Run Text="⌨️ Atalhos:"/>
                            <Run Text="F2: Buscar | F4: Cliente | F5: Pagar | F8: Cancelar Item | ESC: Cancelar Venda" FontWeight="SemiBold"/>
                        </TextBlock>
                    </Border>

                    <!-- Lista de Itens -->
                    <DataGrid Grid.Row="2"
                             x:Name="dgItensVenda"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             CanUserAddRows="False"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             RowHeight="40"
                             FontSize="14"
                             AlternatingRowBackground="#F9F9F9">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Código" 
                                              Binding="{Binding Produto.CodigoBarras}" 
                                              Width="120"/>

                            <DataGridTextColumn Header="Produto" 
                                              Binding="{Binding Produto.Nome}" 
                                              Width="*"/>

                            <DataGridTextColumn Header="Qtd" 
                                              Binding="{Binding Quantidade}" 
                                              Width="80"/>

                            <DataGridTextColumn Header="Preço Unit." 
                                              Binding="{Binding PrecoUnitario, StringFormat=C2}" 
                                              Width="120"/>

                            <DataGridTextColumn Header="Subtotal" 
                                              Binding="{Binding Subtotal, StringFormat=C2}" 
                                              Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Ação" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="🗑️" 
                                               Width="50" 
                                               Height="30"
                                               Background="#F44336"
                                               Foreground="White"
                                               BorderThickness="0"
                                               Click="BtnRemoverItem_Click"
                                               Cursor="Hand"
                                               ToolTip="Remover (F8)"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Cliente Selecionado -->
                    <Border Grid.Row="3" 
                           Background="#E3F2FD" 
                           Padding="15"
                           Margin="0,15,0,0"
                           CornerRadius="3">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤 Cliente:" 
                                          FontSize="14" 
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtClienteSelecionado" 
                                          Text="Nenhum cliente selecionado" 
                                          FontSize="14"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Content="Selecionar Cliente (F4)"
                                   Width="180"
                                   Height="35"
                                   Background="#2196F3"
                                   Foreground="White"
                                   BorderThickness="0"
                                   HorizontalAlignment="Right"
                                   Click="BtnSelecionarCliente_Click"
                                   Cursor="Hand"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Painel Lateral - Resumo e Pagamento -->
            <Border Grid.Column="1" 
                   Background="White" 
                   Padding="20"
                   Margin="10,0,0,0"
                   CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Resumo -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="RESUMO DA VENDA" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,20"/>

                        <Border Background="#F5F5F5" 
                               Padding="15" 
                               Margin="0,0,0,10"
                               CornerRadius="5">
                            <Grid>
                                <TextBlock Text="Itens:" 
                                          FontSize="14"/>
                                <TextBlock x:Name="txtTotalItens" 
                                          Text="0" 
                                          FontSize="16"
                                          FontWeight="Bold"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>

                        <Border Background="#E8F5E9" 
                               Padding="15" 
                               Margin="0,0,0,20"
                               CornerRadius="5">
                            <Grid>
                                <TextBlock Text="TOTAL:" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="#2E7D32"/>
                                <TextBlock x:Name="txtValorTotal" 
                                          Text="R$ 0,00" 
                                          FontSize="28"
                                          FontWeight="Bold"
                                          Foreground="#2E7D32"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Área de Atalhos -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <Button Content="🔍 BUSCAR PRODUTOS (F2)"
                               Height="50"
                               Background="#2196F3"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Margin="0,0,0,10"
                               Click="BtnBuscarProdutos_Click"
                               Cursor="Hand"/>

                        <Button Content="👤 CLIENTE (F4)"
                               Height="50"
                               Background="#FF9800"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Margin="0,0,0,10"
                               Click="BtnSelecionarCliente_Click"
                               Cursor="Hand"/>

                        <Button Content="🗑️ REMOVER ITEM (F8)"
                               Height="50"
                               Background="#F44336"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Margin="0,0,0,10"
                               Click="BtnRemoverItemSelecionado_Click"
                               Cursor="Hand"/>

                        <Button Content="❌ CANCELAR VENDA (ESC)"
                               Height="50"
                               Background="#9E9E9E"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Click="BtnCancelarVenda_Click"
                               Cursor="Hand"/>
                    </StackPanel>

                    <!-- Botão Finalizar -->
                    <Button Grid.Row="2"
                           Content="💵 FINALIZAR VENDA (F5)"
                           Height="70"
                           Background="#4CAF50"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Margin="0,20,0,0"
                           Click="BtnFinalizarVenda_Click"
                           Cursor="Hand">
                        <Button.Effect>
                            <DropShadowEffect Color="#2E7D32" Opacity="0.5" ShadowDepth="3"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <!-- Estilos -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="5"
                               Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>