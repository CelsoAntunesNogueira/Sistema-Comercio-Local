<Window x:Class="SistemaPDV.UI.Views.RelatoriosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Relatorios" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecalho -->
        <Border Grid.Row="0" Background="#9C27B0">
            <Grid Margin="20,0">
                <TextBlock Text="Relatorios e Estatisticas" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <Button Content="Fechar" 
                       Width="100" 
                       Height="35"
                       Background="#F44336"
                       Foreground="White"
                       BorderThickness="0"
                       HorizontalAlignment="Right"
                       Click="BtnFechar_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Conteudo -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filtros -->
            <Border Grid.Row="0" 
                   Background="White" 
                   Padding="20"
                   Margin="0,0,0,20"
                   CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                              Text="Data Inicial:" 
                              VerticalAlignment="Center"
                              FontWeight="SemiBold"
                              Margin="0,0,10,0"/>
                    <DatePicker Grid.Column="1" 
                               x:Name="dtInicio"
                               Height="35"
                               Margin="0,0,20,0"/>

                    <TextBlock Grid.Column="2" 
                              Text="Data Final:" 
                              VerticalAlignment="Center"
                              FontWeight="SemiBold"
                              Margin="0,0,10,0"/>
                    <DatePicker Grid.Column="3" 
                               x:Name="dtFim"
                               Height="35"/>

                    <Button Grid.Column="5"
                           Content="Gerar Relatorio"
                           Width="150"
                           Height="40"
                           Background="#9C27B0"
                           Foreground="White"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Click="BtnGerar_Click"
                           Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Conteudo dos Relatorios -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Coluna Esquerda -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Cards de Resumo -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Card Total Vendas -->
                        <Border Grid.Column="0" 
                               Background="#4CAF50" 
                               Padding="20"
                               Margin="0,0,10,0"
                               CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Total de Vendas" 
                                          FontSize="14" 
                                          Foreground="White"
                                          Opacity="0.9"/>
                                <TextBlock x:Name="txtTotalVendas" 
                                          Text="0" 
                                          FontSize="32" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Card Faturamento -->
                        <Border Grid.Column="1" 
                               Background="#2196F3" 
                               Padding="20"
                               Margin="10,0,0,0"
                               CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Faturamento Total" 
                                          FontSize="14" 
                                          Foreground="White"
                                          Opacity="0.9"/>
                                <TextBlock x:Name="txtFaturamento" 
                                          Text="R$ 0,00" 
                                          FontSize="32" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Lista de Vendas -->
                    <Border Background="White" 
                           Padding="20"
                           CornerRadius="5">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                      Text="Vendas Realizadas" 
                                      FontSize="18" 
                                      FontWeight="Bold"
                                      Margin="0,0,0,15"/>

                            <DataGrid Grid.Row="1"
                                     x:Name="dgVendas"
                                     AutoGenerateColumns="False"
                                     IsReadOnly="True"
                                     SelectionMode="Single"
                                     CanUserAddRows="False"
                                     GridLinesVisibility="Horizontal"
                                     HeadersVisibility="Column"
                                     RowHeight="35"
                                     FontSize="13"
                                     AlternatingRowBackground="#F9F9F9">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" 
                                                      Binding="{Binding Id}" 
                                                      Width="50"/>

                                    <DataGridTextColumn Header="Data" 
                                                      Binding="{Binding DataVenda, StringFormat='dd/MM/yyyy HH:mm'}" 
                                                      Width="140"/>

                                    <DataGridTextColumn Header="Vendedor" 
                                                      Binding="{Binding Usuario.Nome}" 
                                                      Width="*"/>

                                    <DataGridTextColumn Header="Cliente" 
                                                      Binding="{Binding Cliente.Nome}" 
                                                      Width="*"/>

                                    <DataGridTextColumn Header="Valor" 
                                                      Binding="{Binding ValorTotal, StringFormat=C2}" 
                                                      Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Coluna Direita -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Produtos Mais Vendidos -->
                    <Border Background="White" 
                           Padding="20"
                           Margin="0,0,0,20"
                           CornerRadius="5">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="300"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                      Text="Produtos Mais Vendidos (Top 10)" 
                                      FontSize="18" 
                                      FontWeight="Bold"
                                      Margin="0,0,0,15"/>

                            <DataGrid Grid.Row="1"
                                     x:Name="dgProdutosMaisVendidos"
                                     AutoGenerateColumns="False"
                                     IsReadOnly="True"
                                     SelectionMode="Single"
                                     CanUserAddRows="False"
                                     GridLinesVisibility="Horizontal"
                                     HeadersVisibility="Column"
                                     RowHeight="35"
                                     FontSize="13"
                                     AlternatingRowBackground="#F9F9F9">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" 
                                                      Binding="{Binding Posicao}" 
                                                      Width="40"/>

                                    <DataGridTextColumn Header="Produto" 
                                                      Binding="{Binding NomeProduto}" 
                                                      Width="*"/>

                                    <DataGridTextColumn Header="Qtd Vendida" 
                                                      Binding="{Binding Quantidade}" 
                                                      Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="#FF9800"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Total" 
                                                      Binding="{Binding ValorTotal, StringFormat=C2}" 
                                                      Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Estoque Baixo -->
                    <Border Background="White" 
                           Padding="20"
                           CornerRadius="5">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.2" ShadowDepth="2"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                      Text="Produtos com Estoque Baixo" 
                                      FontSize="18" 
                                      FontWeight="Bold"
                                      Margin="0,0,0,15"/>

                            <DataGrid Grid.Row="1"
                                     x:Name="dgEstoqueBaixo"
                                     AutoGenerateColumns="False"
                                     IsReadOnly="True"
                                     SelectionMode="Single"
                                     CanUserAddRows="False"
                                     GridLinesVisibility="Horizontal"
                                     HeadersVisibility="Column"
                                     RowHeight="35"
                                     FontSize="13"
                                     AlternatingRowBackground="#FFF3E0">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Produto" 
                                                      Binding="{Binding Nome}" 
                                                      Width="*"/>

                                    <DataGridTextColumn Header="Estoque" 
                                                      Binding="{Binding EstoqueAtual}" 
                                                      Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="#F44336"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Minimo" 
                                                      Binding="{Binding EstoqueMinimo}" 
                                                      Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>

    <!-- Estilos -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="5"
                               Padding="15,5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>